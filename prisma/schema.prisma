// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  clerkId      String  @unique
  firstname    String?
  lastname     String?
  email        String  @unique
  profileImage String?
  tier         String  @default("Starter")

  formLimit  String @default("1") // Number of forms available
  entryLimit String @default("50") // Number of submissions available

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workflows     Workflow[]
  subscriptions Subscription[]
}

model Subscription {
  id     Int    @id @default(autoincrement())
  userId String
  user   User   @relation(fields: [userId], references: [clerkId])

  lemonCustomerId         Int?    @unique @map(name: "lemon_customer_id")
  lemonSubscriptionId     Int?    @unique @map(name: "lemon_subscription_id")
  lemonProductId          Int?    @map(name: "lemon_product_id")
  lemonVariantId          Int?    @map(name: "lemon_variant_id")
  lemonSubscriptionStatus String?
}

model Workflow {
  id          String   @id @default(uuid())
  name        String
  description String
  nodes       String?
  edges       String?
  flowPath    String?
  publish     Boolean? @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [clerkId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
