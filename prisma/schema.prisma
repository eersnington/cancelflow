// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  clerkId      String  @unique
  firstname    String?
  lastname     String?
  email        String  @unique
  profileImage String?
  tier         String  @default("Starter")

  formLimit  String @default("10") // Number of forms available
  entryLimit String @default("50") // Number of entries available

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workflows     Workflow[]
  subscriptions Subscription[]
}

model Workflow {
  id          String   @id @default(uuid())
  name        String
  description String
  nodes       String?
  edges       String?
  publish     Boolean? @default(false)
  userId      Int
  user        User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id                      Int       @id @default(autoincrement())
  userId                  Int
  user                    User      @relation(fields: [userId], references: [id])
  lemonCustomerId         String?   @unique @map(name: "lemon_customer_id")
  lemonSubscriptionId     String?   @unique @map(name: "lemon_subscription_id")
  lemonVariantId          String?   @map(name: "lemon_variant_id")
  lemonCurrentPeriodEnd   DateTime? @map(name: "lemon_current_period_end")
  lemonSubscriptionStatus String?
}
